        $(".action-button").on("click", function() {
            var isValid = false;

            if (
                $("#textarea").val() == "" ||
                $("#textarea").val() == null ||
                $("#textarea").val() == "undefined"
            ) {
                $("#textarea").addClass("error").focus();
                isValid = false;
                return isValid;
            } else {
                isValid = true;
                $("#textarea").removeClass("error");
                $("#ThankYou").fadeIn(500);
                $("#help-panel").fadeOut(100);
                setTimeout(function() {
                    $("#textarea").val("");
                }, 150);
                return isValid;
            }
        });
    </script>
